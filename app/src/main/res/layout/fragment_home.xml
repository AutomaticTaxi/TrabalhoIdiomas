<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:p="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragmentos.FragmentHome">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.androidplot.pie.PieChart
            android:id="@+id/plot3"
            android:layout_width="380dp"
            android:layout_height="308dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            p:layout_constraintEnd_toEndOf="parent"
            p:layout_constraintTop_toBottomOf="@+id/plot"
            p:title="Perguntas Dificeis"
            p:titleTextSize="24sp" />

        <com.androidplot.pie.PieChart
            android:id="@+id/plot"
            android:layout_width="200dp"
            android:layout_height="267dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:visibility="visible"
            p:layout_constraintStart_toStartOf="parent"
            p:layout_constraintTop_toTopOf="parent"
            p:title="Perguntas Faceis"
            p:titleTextSize="24sp" />

        <com.androidplot.pie.PieChart
            android:id="@+id/plot2"
            android:layout_width="200dp"
            android:layout_height="267dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="4dp"

            p:layout_constraintEnd_toEndOf="parent"
            p:layout_constraintTop_toTopOf="parent"
            p:title="Perguntas Medias"
            p:titleTextSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="201dp"
            android:text="Seus Resultados"
            android:textSize="24sp"
            p:layout_constraintEnd_toEndOf="parent"
            p:layout_constraintStart_toStartOf="parent"
            p:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>